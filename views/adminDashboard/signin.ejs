<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <style>
      .page-bg {
         background-image: url('/assets/media/images/2600x1200/bg-10.png');
       }
     </style>
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
      <div class="card max-w-[30%] w-full">
        <form id="signin-form" action="#" class="card-body flex flex-col gap-5 p-10" method="post" data-gtm-form-interact-id="0">
          <img alt="image" class="h-20 mb-2" src="/assets/media/app/mini-logo.svg">
          <div class="text-center mb-2">
           <h3 class="text-lg font-medium text-gray-900 mb-5">
            Acc√®s admin
           </h3>
           <div class="flex flex-col">
            <span class="text-2sm text-gray-700 mb-1.5">
             Connectez-vous a votre Espace d'administration CIGAFI
            </span>
           </div>
          </div>
          <div >
            <input type="email" id="email" class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:outline-none" placeholder="Email" />
            <p class="error-message hidden text-red-500 text-sm mt-2"></p>
        </div>

        <!-- Password -->
        <div>
            <input type="password" id="password" class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:outline-none" placeholder="Mot de passe" />
            <p class="error-message hidden text-red-500 text-sm mt-2"></p>
        </div>
        <div id="server-error" class="hidden text-red-500 text-sm mb-4"></div>
        <!-- Submit Button -->
        <div class="my-5">
          <div id="server-error" class="hidden text-red-500 text-sm mb-4"></div>
            <button type="submit" id="submit_btn" class="flex gap-2 items-center justify-center w-full py-4 border rounded-full bg-[#204B42] text-white">
                <span>S'enregistrer</span>
            </button>
        </div>
         </form>
      </div>
     </div>
  </body>
 
  <script src="/assets/js/app/admin-auth.js"></script>
</html>
